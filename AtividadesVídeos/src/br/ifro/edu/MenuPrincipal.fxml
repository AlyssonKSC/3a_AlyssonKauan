<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="250.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ifro.edu.MenuPrincipalController">
   <children>
      <MenuBar layoutY="2.0" prefHeight="30.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="Cadastros">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#cadastrarAluno" text="Alunos" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Ferramentas">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#calculadora" text="Calculadora" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" onAction="#fechar" text="Opções">
               <items>
                  <MenuItem mnemonicParsing="false" text="Sair" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
