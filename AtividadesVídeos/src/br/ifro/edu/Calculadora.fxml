<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="200" prefWidth="320" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="atividadesvídeos.CalculadoraController">
   <children>
      <Button fx:id="btnSomar" layoutX="25.0" layoutY="68.0" mnemonicParsing="false" onAction="#somar" text="+">
         <font>
            <Font name="Segoe UI" size="14.0" />
         </font>
      </Button>
      <JFXTextField fx:id="jfxtxtNumero1" labelFloat="true" layoutX="25.0" layoutY="19.0" promptText="Número 1">
         <font>
            <Font name="Segoe UI" size="14.0" />
         </font>
      </JFXTextField>
      <Button fx:id="btnSubtrair" layoutX="63.0" layoutY="68.0" mnemonicParsing="false" onAction="#subtrair" text=" - ">
         <font>
            <Font name="Segoe UI" size="14.0" />
         </font>
      </Button>
      <JFXTextField fx:id="jfxtxtNumero2" labelFloat="true" layoutX="25.0" layoutY="111.0" promptText="Número 2">
         <font>
            <Font name="Segoe UI" size="14.0" />
         </font>
      </JFXTextField>
      <Button fx:id="btnDividir" layoutX="104.0" layoutY="68.0" mnemonicParsing="false" onAction="#dividir" text=" / ">
         <font>
            <Font name="Segoe UI" size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnMultiplicar" layoutX="147.0" layoutY="68.0" mnemonicParsing="false" onAction="#multiplicar" text=" * ">
         <font>
            <Font name="Segoe UI" size="14.0" />
         </font>
      </Button>
      <JFXTextField fx:id="jfxtxtResultado" editable="false" layoutX="206.0" layoutY="70.0" prefHeight="25.0" prefWidth="80.0" />
   </children>
</AnchorPane>
